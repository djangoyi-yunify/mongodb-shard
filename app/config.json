        {
            "key": "env",
            "description": "Application configuration properties",
            "type": "array",
            "properties": [
                {
                    "key": "db.userpass",
                    "label": "DB User Password",
                    "description": "The passowrd of user 'root'",
                    "type": "password",
                    "pattern": "(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,32}",
                    "default": "Passw0rd",
                    "required": "no"
                },
                {
                    "key": "conf.mongod.engine",
                    "label": "Storage engine",
                    "description": "Storage engine",
                    "type": "string",
                    "default": "wiredTiger",
                    "range": ["wiredTiger"],
                    "changeable": false,
                    "required": "yes"
                },
                {
                    "key": "conf.mongod.port",
                    "label": "Listening port",
                    "description": "Listening port",
                    "type": "integer",
                    "default": 27017,
                    "required": "yes"
                },
                {
                    "key": "conf.mongod.replication.oplogSizeMB",
                    "label": "replication.oplogSizeMB",
                    "description": "The maximum size in megabytes for the replication operation log",
                    "type": "integer",
                    "default": 2048,
                    "required": "yes"
                },
                {
                    "key": "conf.mongod.replication.enableMajorityReadConcern",
                    "label": "replication.enableMajorityReadConcern",
                    "description": "oplog size",
                    "type": "boolean",
                    "default": true,
                    "required": "yes"
                }
            ]
